<?php
/**
 * The base configurations of the WordPress.
 *
 * @package WordPress
 */

// ** MySQL settings - You can get this info from your web host ** //
/** The name of the database for WordPress */
define('DB_NAME', '<%= @db_name %>');

/** MySQL database username */
define('DB_USER', '<%= @db_user %>');

/** MySQL database password */
define('DB_PASSWORD', '<%= @db_password %>');

/** MySQL hostname */
define('DB_HOST', '<%= @db_host %>');

/** Database Charset to use in creating database tables. */
define('DB_CHARSET', 'utf8');

/** The Database Collate type. Don't change this if in doubt. */
define('DB_COLLATE', '');

/**
 * WordPress Database Table prefix.
 */
$table_prefix  = 'wp_';

/**
 * WordPress Localized Language, defaults to English.
 */

define('WPLANG', '<%= @wp_lang %>');

/**
 * For developers: WordPress debugging mode.
 */
define('WP_DEBUG', false);

/**
 * Modules loaded by Puppet Config
 */
define('MULTISITE',<%= @wp_multisite %>);
<% if @wp_multisite %>
define('SUBDOMAIN_INSTALL',    <%= @wp_subdomain_install %>);
define('DOMAIN_CURRENT_SITE',  <%= @wp_domain_current_site %> );
define('PATH_CURRENT_SITE',    <%= @wp_path_current_site %>);
define('SITE_ID_CURRENT_SITE', <%= @wp_site_id_current_site %>);
define('BLOG_ID_CURRENT_SITE', <%= @wp_blog_id_current_site %>);
<% end %>

<% if @wp_plugin_dir != 'DEFAULT' %>
define('WP_PLUGIN_DIR', '<%= @wp_plugin_dir %>');
<% end %>

define('WPMU_ACCEL_REDIRECT', <%= @wpmu_accel_redirect %>);

/** Absolute path to the WordPress directory. */
if ( !defined('ABSPATH') )
        define('ABSPATH', dirname(__FILE__) . '/');

/** Sets up WordPress vars and included files. */
require_once(ABSPATH . 'wp-keysalts.php');
require_once(ABSPATH . 'wp-settings.php');

?>
